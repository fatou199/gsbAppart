<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Gsb-Appartements{% endblock %}</title>
        <link rel="stylesheet" 
        href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="/"> GsbAppartements</a>
                <button class="navbar-toggler" type="button" 
                data-toggle="collapse" data-target="navbarColor03" 
                aria-controls="navbarColor03" aria-expanded="false" 
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
            
                <div class="collapse navbar-collapse show" id="#navbarColor03">
                <ul class="navbar-nav mr-auto">
                    
                    {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                    </li>
                    {% else %}
                    {% if is_granted ('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin') }}">Appartements</a> 
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('clients') }}">Clients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('proprietaires') }}">Proprietaires</a>
                    </li>
                    {% endif %}
                    {% if is_granted ('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('info') }}">Vos informations</a> 
                    </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Deconnexion</a>
                    </li>
                </ul>
                {% endif %}
                </div>
        </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
